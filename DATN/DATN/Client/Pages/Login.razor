@page "/login"
@inject HttpClient httpClient
@inject IJSRuntime JS
@inject NavigationManager Navigation

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-card {
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-primary-custom {
            background-color: #d35400;
            border: none;
            border-radius: 20px;
            padding: 10px 0;
            width: 100%;
            font-weight: bold;
        }

            .btn-primary-custom:hover {
                background-color: #e67e22;
            }
    </style>
</head>

<body>
    <div class="login-card">
        <h3 class="text-center mb-4">Đăng nhập</h3>
        <EditForm Model="@loginUser" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
           

            <div class="mb-3">
                <InputText class="form-control" placeholder="Email" @bind-Value="loginUser.Email" />
                <ValidationMessage For="@(() => loginUser.Email)" />
            </div>
            <div class="mb-3">
                <InputText type="password" class="form-control" placeholder="Mật khẩu" @bind-Value="loginUser.Password" />
                <ValidationMessage For="@(() => loginUser.Password)" />
            </div>
            <button type="submit" @onclick="HandleValidSubmit" class="btn btn-primary-custom">Đăng nhập</button>
        </EditForm>


        @if (loginFailed)
        {
            <div class="alert alert-danger mt-3">Email hoặc mật khẩu không chính xác.</div>
        }
    </div>

    @if (loggedInUser != null)
    {
        <div class="mt-4 login-card">
            <h4 class="text-center mb-4">Đổi mật khẩu</h4>
            <EditForm Model="@passwordChangeModel" OnValidSubmit="HandlePasswordChange">           
                <div class="mb-3">
                    <InputText type="password" class="form-control" placeholder="Mật khẩu mới" @bind-Value="passwordChangeModel.NewPassword" />
                    <ValidationMessage For="@(() => passwordChangeModel.NewPassword)" />
                </div>
                <div class="mb-3">
                    <InputText type="password" class="form-control" placeholder="Xác nhận mật khẩu mới" @bind-Value="passwordChangeModel.ConfirmNewPassword" />
                    <ValidationMessage For="@(() => passwordChangeModel.ConfirmNewPassword)" />
                </div>
                <h4 class="text-center mb-4">Xác nhận mã OTP</h4>               
                <button type="submit" class="btn btn-primary-custom">Đổi mật khẩu</button>
            </EditForm>         
        </div>
    }
    

    <div class="mt-4">
        <h5 class="text-center">Dữ liệu người dùng</h5>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên người dùng</th>
                    <th>Email</th>
                    <th>Ngày tạo</th>
                    <th>Mật khẩu</th>
                    <th>Kiểu tài khoản</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Users)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>@user.Password</td>
                        <td>@user.AccountType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal thông báo thành công -->
    <div class="modal fade" tabindex="-1" role="dialog" id="successModal">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content text-center p-4">
                <div class="modal-body">
                    <img src="https://img.icons8.com/fluency/48/000000/checkmark.png" alt="Success Icon" />
                    <h4 class="mt-3" style="color: #d35400;">Thành công</h4>
                    <p>Chúc quý khách ngon miệng</p>
                    <button type="button" class="btn btn-primary-custom mt-2" data-bs-dismiss="modal">Ăn ngay thôi!</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showModal(modalId) {
            var modal = new bootstrap.Modal(document.getElementById(modalId));
            modal.show();
        }

        function showAlert(message) {
            switch (message) {
                case "True":
                    showModal("successModal");
                    break;
                case "False":
                    alert("Email hoặc mật khẩu không chính xác.");
                    break;
                case "Mật khẩu hiện tại không đúng":
                    alert("Mật khẩu hiện tại không đúng.");
                    break;
                case "Mật khẩu xác nhận không khớp":
                    alert("Mật khẩu xác nhận không khớp.");
                    break;
                case "Đổi mật khẩu thành công":
                    alert("Đổi mật khẩu thành công.");
                    break;
                case "Chưa đăng nhập":
                    alert("Vui lòng đăng nhập trước khi đổi mật khẩu.");
                    break;
                default:
                    alert(message);
                    break;
            }
        }
    </script>
</body>
@code{
    
    private PasswordChangeModel passwordChangeModel = new PasswordChangeModel();
}