@page "/demoinvoice-preview"
@inject HttpClient httpClient
@inject IJSRuntime JS
@layout MainLayout

<div class="invoice-container" id="invoice-preview">
    <!-- Invoice Header -->
    <div class="invoice-header">
        <h1>NGUYỄN HOÀNG SANG</h1>
        <h2 class="mb-2">CÀ PHÊ & ĐỒ ĂN SÁNG</h2>
        <h4>HÓA ĐƠN</h4>
    </div>

    <!-- Invoice Details -->
    <div class="invoice-details">
        <div class="row">
            <div class="col-md-6">
                <strong>TIỆN NGHI NHÀ BẾP CỦA CHÚNG TÔI</strong>
            </div>
@*             <div class="col-md-6 text-end">
                Điện thoại Khách hàng: +84 912 345 678<br>
                Địa chỉ Khách hàng: 123 Đường ABC, Thành phố DEF
            </div> *@
        </div>
    </div>

    <!-- Product Table -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Mục</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img src="https://via.placeholder.com/50" alt="Bánh nhung đỏ"></td>
                <td>Bánh nhung đỏ</td>
                <td>1</td>
                <td>200.000đ</td>
                <td>200.000đ</td>
            </tr>
        </tbody>
    </table>

    <!-- Total Section -->
    <div class="total-section-bill">
        Tổng tiền đơn hàng: 800.000đ<br>
        Thuế (0%): 0đ<br>
        <strong>Tổng tiền thanh toán: 800.000đ</strong>
    </div>

    <!-- Footer Section: Bank Information and Contact Information -->
    <div class="footer-section">
        <div>
            <strong>Thông tin ngân hàng</strong>
            Ngân hàng: Tiên phong<br>
            Tên tài khoản: FFOOD<br>
            Số tài khoản: 123 456 7890
        </div>
        <div class="text-end">
            <strong>Thông tin liên hệ</strong>
            Email: ffood@teach.com<br>
            Điện thoại: +84 912 345 678<br>
            Địa chỉ: 3/2 Hưng Lợi, Ninh Kiều, Cần Thơ
        </div>
    </div>
</div>

<!-- Nút in hóa đơn -->
<button class="btn btn-primary mt-3" @onclick="PrintBill">In hóa đơn</button>
<button class="btn btn-success mt-3" @onclick="PrintFromBrowser">Xem trước và in từ trình duyệt</button>
