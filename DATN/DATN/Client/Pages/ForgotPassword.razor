@page "/forgotpassword"
@inject HttpClient Http
@layout MainLayout
@using DATN.Shared
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<EditForm Model="@emailRequest" OnValidSubmit="SendOtp">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="card p-4 shadow-sm" style="max-width: 400px; margin: auto;">
        <h4 class="text-center mb-4">Quên mật khẩu</h4>

        <div class="form-group">
            <label for="email">Email:</label>
            <InputText id="email" class="form-control" @bind-Value="emailRequest.Email" placeholder="Nhập email của bạn" />
        </div>

        <div class="form-group">
            <button type="submit" class="submit-btn fw-semibold shadow btn-block">Gửi OTP</button>
        </div>

    </div>
    <nav class="navbar fixed-bottom navbar-light bg-light">
        <div class="container-fluid justify-content-around">
            <a href="/" class="nav-link"><i class="bi bi-house"></i></a>
            <a href="/order-list" class="nav-link"><i class="bi bi-card-list"></i></a>
            <a href="/food-ordered" class="nav-link"><i class="bi bi-bookmark"></i></a>
            <a href="/userinfo" class="nav-link"><i class="bi bi-person" style="color: orange"></i></a>
        </div>
    </nav>
</EditForm>