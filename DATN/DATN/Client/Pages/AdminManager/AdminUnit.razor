@page "/adminunit"
@using DATN.Shared
@layout LayoutAdmin
@inject HttpClient httpClient
@inject NavigationManager Navigation


<style>
    .product-table-container {
        max-height: 600px;
        overflow-y: auto;
    }

        .product-table-container table {
            width: 100%;
        }

    .search-bar, .filter-bar {
        margin-bottom: 20px;
    }
</style>

@if (isLoaded)
{
    <button class="btn btn-success" @onclick="() => CreateUnit()">Add Unit</button>
    <hr />
    <h4>Unit</h4>
    <div class="search-bar">
        <input type="text" class="form-control" placeholder="Search Unit..." @oninput="Filter" />
    </div>
    <div class="product-table-container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>UnitName</th>
                    <th>UnitDescription</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in filter)
                {
                    if (unit != null)
                    {
                        <tr>
                            <td>@unit.UnitName</td>
                            <td>@unit.UnitDescription</td>
                            <td class="text-center">
                                <button class="btn btn-primary" @onclick="() => EditUnit(unit.UnitId)">Edit</button>
                                <button class="btn btn-danger" @onclick="() => DeleteUnit(unit.UnitId)">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p class="text-danger">@errorMessage</p>
}
else
{
    <p>Loading...</p>
}

