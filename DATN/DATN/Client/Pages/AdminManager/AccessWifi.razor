@page "/access-wifi"
@using DATN.Client.Service
@inject HttpClient httpClient
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject AuthenticationStateProvider authenticationStateProvider
@inject LocalStorageService _localStorageService
@layout InitLayout

<CascadingAuthenticationState>
    <AuthorizeView Roles="1,2,3">
        <Authorized>
            <style>
                body {
                    background-color: #f8f9fa;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100vh;
                }

                .login-card {
                    background-color: white;
                    border-radius: 10px;
                    padding: 30px;
                    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
                }

                .btn-primary-custom:hover {
                    background-color: #e67e22;
                }
            </style>

            <div class="position-absolute top-50 start-50 translate-middle">
                <div class="login-card w-100 h-100">
                    <h3 class="text-center mb-4">Thêm IP wifi</h3>

                    <div class="mb-3">
                        <input class="form-control" placeholder="Access IP Wifi" @bind-value="IP" />
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" @onclick="HandleSubmit" class="btn btn-success">Xác nhận</button>
                        <button type="submit" @onclick="HandleRemove" class="btn btn-danger">Xóa</button>
                    </div>
                </div>
            </div>

        </Authorized>
        <NotAuthorized>
            <div class="container-fluid access-denied-container">
                <div class="access-denied-card">
                    <h1>403</h1>
                    <p><strong>Access Denied</strong></p>
                    <p>You do not have permission to access this page.</p>
                    <a href="/" class="btn btn-primary mt-3">Go to Homepage</a>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>