                                </tr>
                            </thead>
                            <tbody>
                                @if (order != null && order.OrderItems != null && order.OrderItems.Any(o => o.Quantity > 0))
                                {
                                    foreach (var c in order.OrderItems.Where(a => !a.IsDeleted && a.Quantity > 0).ToList())
                                    {
                                        <tr>
                                            <td><img src="data:image/png;base64,@Convert.ToBase64String(c.Products.ProductImage)" alt="Product"></td>
                                            <td>@c.Products.ProductName</td>
                                            <td>@c.Quantity</td>
