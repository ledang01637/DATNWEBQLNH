@page "/chat"
@inject IJSRuntime JSRuntime

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatBot Integration</title>
    <base href="/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <script src="https://example.com/obj/unpkg-va/flow-platform/chat-app-sdk/1.0.0/libs/oversea/index.js"></script>
    <script src="js/chatbot.js"></script>
</head>
<body>
    <app>Loading...</app>

    <h3>Chat with Coze</h3>

    <div id="chat-container" style="width: 100%; height: 500px; border: 1px solid #ccc; padding: 10px; overflow-y: auto;"></div>
    <input type="text" id="chat-input" placeholder="Type your message here..." style="width: calc(100% - 22px); padding: 10px; margin-top: 10px;" />


    <script>
        window.initializeChatBot = (botId) => {
            const chatContainer = document.getElementById('chat-container');
            const chatInput = document.getElementById('chat-input');

            const chatClient = new CozeWebSDK.WebChatClient({
                config: {
                    bot_id: botId,
                },
                componentProps: {
                    title: 'Coze',
                },
            });

            chatInput.addEventListener('keypress', function (event) {
                if (event.key === 'Enter') {
                    const message = chatInput.value;
                    if (message.trim() !== '') {
                        chatClient.sendMessage(message);
                        chatContainer.innerHTML += `<div><strong>You:</strong> ${message}</div>`;
                        chatInput.value = '';
                    }
                }
            });

            chatClient.onMessageReceived = function (message) {
                chatContainer.innerHTML += `<div><strong>Bot:</strong> ${message}</div>`;
            };
        };
    </script>
</body>
</html>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializeChatBot", "7429378053342037008");
        }
    }
}