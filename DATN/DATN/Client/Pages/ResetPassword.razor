@page "/resetpassword"
@layout MainLayout
@using System.Net.Http.Json
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.6/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.6/dist/sweetalert2.all.min.js"></script>
<EditForm Model="@resetPasswordRequest" OnValidSubmit="ResetPasswordd">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="card p-4 shadow-sm" style="max-width: 400px; margin: auto;">
        <h4 class="text-center mb-4">Đặt lại mật khẩu</h4>

        <div class="form-group">
            <label for="otp">Mã OTP:</label>
            <InputText id="otp" class="form-control" @bind-Value="resetPasswordRequest.Otp" placeholder="Nhập mã OTP" />
        </div>

        <div class="form-group">
            <label for="newPassword">Mật khẩu mới:</label>
            <InputText id="newPassword" class="form-control" type="password" @bind-Value="resetPasswordRequest.NewPassword" placeholder="Nhập mật khẩu mới" />
        </div>

        <div class="form-group">
            <label for="confirmPassword">Xác nhận mật khẩu:</label>
            <InputText id="confirmPassword" class="form-control" type="password" @bind-Value="resetPasswordRequest.ConfirmPassword" placeholder="Xác nhận mật khẩu mới" />
        </div>

        <div class="form-group">
            <button type="submit" class="submit-btn fw-semibold shadow btn-block">Đặt lại mật khẩu</button>
        </div>
    </div>
    <nav class="navbar fixed-bottom navbar-light bg-light">
        <div class="container-fluid justify-content-around">
            <a href="/" class="nav-link"><i class="bi bi-house"></i></a>
            <a href="/order-list" class="nav-link"><i class="bi bi-card-list"></i></a>
            <a href="/food-ordered" class="nav-link"><i class="bi bi-bookmark"></i></a>
            <a href="/userinfo" class="nav-link"><i class="bi bi-person" style="color: orange"></i></a>
        </div>
    </nav>
</EditForm>