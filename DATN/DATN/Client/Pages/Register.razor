@inject HttpClient httpClient
@inject IJSRuntime JS
@inject NavigationManager Navigation
@page "/register"



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-card {
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .btn-primary-custom {
            background-color: #d35400;
            border: none;
            border-radius: 20px;
            padding: 10px 0;
            width: 100%;
            font-weight: bold;
        }

            .btn-primary-custom:hover {
                background-color: #e67e22;
            }
    </style>
</head>

<body>
    <div class="register-card">
        <h3 class="text-center mb-4">Đăng ký</h3>
        <EditForm Model="@newUser" OnValidSubmit="HandleValidSubmitAsync">
            <DataAnnotationsValidator />
            

            <div class="mb-4 position-relative">
                <InputText class="form-control" placeholder="Tên người dùng" @bind-Value="newUser.Username" />
                <ValidationMessage For="@(() => newUser.Username)" style="margin-left:10px; position:absolute; left:0; bottom:-25px; font-size:14px !important;" />
            </div>
            <div class="mb-4 position-relative" >
                <InputText class="form-control" placeholder="Số điện thoại" @bind-Value="newUser.PhoneNumber" />
                <ValidationMessage For="@(() => newUser.PhoneNumber)" style="margin-left:10px; position:absolute; left:0; bottom:-25px; font-size:14px !important;" />
            </div>
            <div class="mb-4 position-relative">
                <InputText class="form-control" placeholder="Email" @bind-Value="newUser.Email" />
                <ValidationMessage For="@(() => newUser.Email)" style="margin-left:10px; position:absolute; left:0; bottom:-25px; font-size:14px !important;" />
            </div>
            <div class="mb-4 position-relative">
                <InputText type="password" class="form-control" placeholder="Mật khẩu" @bind-Value="newUser.Password" />
                <ValidationMessage For="@(() => newUser.Password)" style="margin-left:10px; position:absolute; left:0; bottom:-25px; font-size:14px !important;" />
            </div>
            <div class="mb-4 position-relative">
                <InputText type="password" class="form-control" placeholder="Nhập lại mật khẩu" @bind-Value="newUser.ConfirmPassword" />
                <ValidationMessage For="@(() => newUser.ConfirmPassword)" style="margin-left:10px; position:absolute; left:0; bottom:-25px; font-size:14px !important;" />
            </div>
            <button type="submit" class="btn btn-primary-custom">Tôi đang rất đói!</button>
        </EditForm>

        <div class="mt-4">
            <h5 class="text-center">Dữ liệu người dùng</h5>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên người dùng</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Ngày tạo</th>
                        <th>Mat khau</th>
                        <th>Kiểu tài khoản</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@user.Password</td>
                            <td>@user.AccountType</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

