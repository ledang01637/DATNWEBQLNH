@page "/register"
@layout MainLayout
@inject HttpClient httpClient
@inject IJSRuntime JS
@inject NavigationManager Navigation

<style>
    html, body 
    {
        overflow-y: hidden;
    }
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: #F2F2F2;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn-primary-custom, .btn-secondary-custom {
        border: none;
        border-radius: 20px;
        padding: 10px 0;
    }

    .register-card {
        width: 100%;
        font-weight: bold;
    }

    .btn-secondary-custom {
        background-color: #4444;
    }

    .btn-primary-custom {
        background-color: #d35400;
    }

    .btn-secondary-custom:hover {
        background-color: #444;
    }

    .btn-primary-custom:hover {
        background-color: #e67e22;
    }

    .custom-link:hover {
        cursor: pointer;
    }

    .register-container {
        position: relative;
        max-width: 400px;
        width: 100%;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .validation-message {
        font-size: 14px;
        color: #dc3545;
    }

    .iphone-13-mini-2-inner{
        display: none;
    }
</style>

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <section class="iphone-13-mini-2-inner">
        <div class="frame-parent">
            <div class="frame-wrapper">
                <div class="frame-group">
                    <div class="frame-container d-flex align-items-center justify-content-between">
                        <a class="nav-link" href="/login"><i class="fas fa-arrow-left fs-2"></i></a>
                        <h1 class="foodgo m-0">Foodgo</h1>
                        <div class="ellipse4-31-iphone13mini-1-wrapper">
                            <img class="ellipse4-31-iphone13mini-1-icon" loading="lazy" alt="" src="/images/hinhanh/hambuger.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="register-container position-absolute start-50 translate-middle shadow rounded" style="top: 35%;">
        <h3 class="text-center mb-4">Đăng ký</h3>
        <EditForm Model="@customer" OnValidSubmit="HandleValidSubmitAsync">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <InputText class="form-control" placeholder="Họ Tên" @bind-Value="customer.CustomerName" />
                <ValidationMessage For="@(() => customer.CustomerName)" class="validation-message" />
            </div>

            <div class="mb-3">
                <InputText class="form-control" placeholder="Số điện thoại" @bind-Value="customer.PhoneNumber" min="10" max="12" />
                <ValidationMessage For="@(() => customer.PhoneNumber)" class="validation-message" />
            </div>

            <div class="mb-3">
                <InputText class="form-control" placeholder="Địa chỉ" @bind-Value="customer.Address" />
                <ValidationMessage For="@(() => customer.Address)" class="validation-message" />
            </div>

            <div class="mb-3">
                <InputText class="form-control" placeholder="Email" @bind-Value="customer.Email" />
                <ValidationMessage For="@(() => customer.Email)" class="validation-message" />
            </div>

            <button type="submit" class="btn btn-primary-custom w-100" disabled="@isLoading">Xác nhận</button>
        </EditForm>
    </div>
}