@page "/book-table"
@using DATN.Client.Service
@layout MainLayout
@inject HttpClient httpClient
@inject LocalStorageService _localStorageService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject CartService _cartService

<style>

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 20px;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-red {
        background-color: #ff4d4f;
        color: white;
        border: none;
    }

        .btn-red:hover {
            background-color: #ff7875;
        }

    .btn-outline-danger {
        color: #ff4d4f;
        border-color: #ff4d4f;
    }

        .btn-outline-danger:hover {
            background-color: #ff4d4f;
            color: white;
        }

    .book-header {
        border-bottom: 1px solid #bababa;
        padding-bottom: 10px;
        margin-bottom: 15px;
    }

    h5 {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .btn-group-custom {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<div class="d-flex d-inline-block">
    <div class="align-items-start">
        <a href="/" class="link-dark fw-semibold">
            <i class="bi bi-box-arrow-left" style="font-size: 20px;"></i>
        </a>
    </div>
    <h5 class="text-center mx-auto mb-4 fw-semibold">Đặt bàn</h5>
</div>

<div class="container my-3">
    <div class="row g-4">
        <!-- Thông tin người đặt -->
        <div class="col-lg-12">
            <div class="card">
                <h5 class="mb-4">Thông tin người đặt</h5>
                <EditForm Model="@reservationModel" OnValidSubmit="HandleBookTable">
                    <div class="mb-3">
                        <label for="name" class="form-label">Tên liên lạc <span class="text-danger">*</span></label>
                        <InputText id="name" class="form-control" @bind-Value="reservationModel.CustomerName" placeholder=" Nhập tên liên hệ" required />
                        <ValidationMessage For="@(() => reservationModel.CustomerName)" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                            <InputText type="tel" id="phone" class="form-control" @bind-Value="reservationModel.CustomerPhone" placeholder="Nhập số điện thoại" required />
                            <ValidationMessage For="@(() => reservationModel.CustomerPhone)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                            <InputText class="form-control" placeholder="Nhập email" @bind-Value="reservationModel.CustomerEmail" />
                            <ValidationMessage For="@(() => reservationModel.CustomerEmail)" class="validation-message" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-6 col-6">
                            <label for="adults" class="form-label icon-label">
                                <i class="fas fa-user"></i> Người lớn:
                            </label>
                            <input type="number" id="adults" class="form-control" min="1" max="200" value="1">
                        </div>
                        <div class="mb-3 col-md-6 col-6">
                            <label for="children" class="form-label icon-label">
                                <i class="fas fa-child"></i> Trẻ em:
                            </label>
                            <input type="number" id="children" class="form-control" min="0" max="200" value="0">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="time" class="form-label">Thời gian đến:</label>
                        <div class="row">
                            <div class="col-7">
                                <input type="date" id="date" class="form-control mb-2" value="2024-11-23">
                            </div>
                            <div class="col-5">
                                <input type="time" id="time" class="form-control" value="17:30">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="note" class="form-label">Ghi chú</label>
                        <textarea id="note" rows="3" class="form-control" placeholder="Nhập ghi chú"></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary w-100" disabled>Tiếp tục</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>









