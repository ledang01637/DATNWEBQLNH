@page "/personalinformation"
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="d-flex d-inline-block">
                    <div class="align-items-start">
                        <a href="userseting" class="link-dark fw-semibold">
                            <i class="bi bi-box-arrow-left" style="font-size: 20px;"></i>
                        </a>
                    </div>
                    <h4 class="text-center mx-auto mb-4 fw-semibold">Thông tin cá nhân</h4>
                </div>

                <form>
                    <div class="form-group input-group-lg">
                        <input type="text" class="form-control rounded-4 fw-semibold shadow" id="fullName" placeholder="Họ và tên" style="height: 50px; font-size: 15px;">
                    </div>
                    <div class="form-group input-group-lg">
                        <input type="email" class="form-control rounded-4 fw-semibold shadow" id="email" placeholder="Email" style="height: 50px; font-size: 15px;">
                    </div>  
                    <div class="form-group input-group-lg">
                        <input type="password" class="form-control rounded-4 fw-semibold shadow" id="password" placeholder="Mật khẩu" style="height: 50px; font-size: 15px;">
                    </div>
                    <div class="form-group input-group-lg">
                        <input type="text" class="form-control rounded-4 fw-semibold shadow" id="phone" placeholder="Số điện thoại" style="height: 50px; font-size: 15px;">
                    </div>

                    <hr class="mt-5" />
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-50 text-center rounded-4 bg-dark border-dark shadow" style="height: 70px;">Sửa thông tin | <i class="bi bi-pencil-square"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
