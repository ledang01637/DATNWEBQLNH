@page "/manager1"
@layout MainLayout
@inject HttpClient httpClient
@inject IJSRuntime JS
@inject LocalStorageService _localStorageService
@inject NavigationManager Navigation
<style>
    #video-container {
        position: relative;
        margin: auto;
        width: 640px;
    }

    #localVideo {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 120px;
        height: 90px;
        z-index: 10;
    }

    video {
        display: none;
        opacity: 0;
    }

    #remoteVideo {
        width: 100%;
        height: 100%;
    }

    #action-buttons {
        margin: auto;
        text-align: center;
        margin-top: 20px;
    }

    .hidden-first {
        display: none;
    }
</style>

<div class="container body-voice-custom">

    <div id="particles-js"></div>

    <div class="phone-call-box" id="call-box">
        <div class="caller-info">
            <div class="caller-name">Bàn số @from</div>
        </div>
        <div id="video-container">
            <video id="localVideo" autoplay muted></video>
            <video id="remoteVideo" autoplay muted></video>
        </div>
        <div class="call-message" id="call-message">Đang gọi nhân viên...</div>
        <div class="call-actions" id="call-actions">
            <button class="btn-action btn-reject" id="btn-end" @onclick="EndCall">
                <i class="bi bi-telephone-x-fill" style="font-size: 24px;"></i>
                <span>Kết thúc</span>
            </button>
        </div>
    </div>
</div>


<button class="btn-action btn-answer" id="btn-answer">
    <i class="bi bi-telephone-fill" style="font-size: 24px;"></i>
    <span>Nhận</span>
</button>
<div class="row">
    <div class="col" id="action-buttons">
        <button id="callButton" class="btn btn-success">Call</button>
        <button id="answerCallButton" class="btn btn-info hidden-first">Answer Call</button>
        <button id="rejectCallButton" class="btn btn-warning hidden-first">Reject Call</button>
        <button id="endCallButton" class="btn btn-danger hidden-first">End Call</button>
    </div>
</div>