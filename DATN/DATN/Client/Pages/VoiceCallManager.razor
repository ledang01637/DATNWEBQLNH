    private string callerId = "manager";
    private string calleeId = "customer";
    private async Task SetupCall()
    {
        await Js.InvokeVoidAsync("setupCall", token, callerId, calleeId);
    }
    private async Task setupVideo()
    {
        await Js.InvokeVoidAsync("setupVideo", "answerCallButton", "callButton", "remoteVideo", "localVideo");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await SetupCall();
            await setupVideo();
        }
    }
}