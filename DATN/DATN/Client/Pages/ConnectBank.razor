        <div class="d-flex align-items-center justify-content-between payment-option">
            <div class="d-flex align-items-center">
                <img src="/image/MasterCard.png" alt="Credit Card" class="payment-icon">
                <div class="ms-2">
                    <strong>Credit Card</strong>
                    <p class="mb-0 small">4444 **** **** 6739</p>
                </div>
            </div>
            <a href="#" class="arrow-icon">&rsaquo;</a>
        </div>
        <hr>
        <!-- Add new payment method -->
        <div class="d-flex align-items-center justify-content-between payment-option">
            <div class="d-flex align-items-center">
                <img src="/image/credit-card.png" alt="Add new payment method" class="payment-icon">
                <div class="ms-2">
                    <strong>Add new payment method</strong>
                </div>
            </div>
            <a href="#" class="add-icon">+</a>
        </div>
    </div>
    <nav class="navbar fixed-bottom navbar-light bg-light">
        <div class="container-fluid justify-content-around">
            <a href="/" class="nav-link"><i class="bi bi-house"></i></a>
