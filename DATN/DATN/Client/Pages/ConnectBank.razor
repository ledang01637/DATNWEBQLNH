<body>
    <div class="container mt-5">
        <div class="d-flex d-inline-block">
            <div class="align-items-start">
                <a href="userinfo" class="link-dark fw-semibold">
                    <i class="bi bi-box-arrow-left" style="font-size: 20px;"></i>
                </a>
            </div>
            <h4 class="text-center mx-auto mb-4 fw-semibold">Liên kết ngân hàng</h4>
        </div>

        <!-- PayPal option -->
